<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainMenuActivity">

    <Button
        android:id="@+id/main_menu_but_start"
        android:layout_width="@dimen/main_menu_but_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_menu_defaultMargin"
        android:layout_marginTop="@dimen/main_menu_defaultMargin"
        android:layout_marginEnd="@dimen/main_menu_defaultMargin"
        android:layout_marginBottom="@dimen/main_menu_defaultMargin"
        android:background="@android:color/holo_green_light"
        android:text="@string/main_menu_but_start_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/main_menu_tv_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_menu_defaultMargin"
        android:layout_marginTop="@dimen/main_menu_defaultMargin"
        android:layout_marginEnd="@dimen/main_menu_defaultMargin"
        android:layout_marginBottom="@dimen/main_menu_defaultMargin"
        android:text="@string/main_menu_default_best"
        android:textSize="72sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <TextView
        android:id="@+id/main_menu_tv_best_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_menu_defaultMargin"
        android:layout_marginEnd="@dimen/main_menu_defaultMargin"
        android:layout_marginBottom="@dimen/main_menu_defaultMargin"
        android:text="@string/main_menu_best_label_text"
        android:textSize="@dimen/main_menu_best_label_text_size"
        app:layout_constraintBottom_toTopOf="@+id/main_menu_tv_best"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_menu_but_quit"
        android:layout_width="@dimen/main_menu_but_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_menu_defaultMargin"
        android:layout_marginTop="@dimen/main_menu_defaultMargin"
        android:layout_marginEnd="@dimen/main_menu_defaultMargin"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/main_menu_quit_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_but_start" />
</android.support.constraint.ConstraintLayout>